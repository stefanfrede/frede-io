{
  "name": "frede-io",
  "version": "2.0.0",
  "description": "stefan frede's website",
  "engines": {
    "node": "12.x.x",
    "npm": "6.x.x"
  },
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git@gitlab.com:stefanfrede/website.git"
  },
  "keywords": [
    "website"
  ],
  "author": {
    "name": "Stefan Frede",
    "email": "stefan@frede.dev"
  },
  "license": "UNLICENSED",
  "private": true,
  "bugs": {
    "url": "https://gitlab.com/stefanfrede/website/issues"
  },
  "homepage": "https://www.frede.io",
  "browserslist": [
    "defaults"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "*.{css,js,html}": "stylelint --fix",
    "*.{js,html}": "eslint --fix"
  },
  "sideEffects": false,
  "scripts": {
    "clean": "rimraf build && rimraf dist",
    "lighthouse": "lighthouse http://localhost:8080 --output=html --output-path=./report.html --view",
    "serve": "serve --no-clipboard --listen 8080 dist",
    "start": "run-s clean start:*",
    "start:snowpack": "snowpack dev --open none",
    "build": "run-s clean build:snowpack",
    "build:snowpack": "snowpack build",
    "lint": "run-s lint:*",
    "lint:eslint": "eslint --ext .js --ext .html src/",
    "lint:stylelint": "stylelint src/**/*.js src/**/*.html src/**/*.css",
    "format": "run-s format:*",
    "format:eslint": "eslint --ext .js --ext .html src/ --fix",
    "format:stylelint": "stylelint src/**/*.js src/**/*.html src/**/*.css --fix",
    "validate": "run-s build lint",
    "setup": "npm install && npm run validate"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "babel-eslint": "^10.1.0",
    "browserslist": "^4.14.5",
    "core-js": "^3.6.5",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "^6.14.0",
    "eslint-plugin-html": "^6.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "lighthouse": "^6.4.1",
    "lint-staged": "^10.5.0",
    "prettier": "^2.1.2",
    "serve": "^11.3.2",
    "stylelint": "^13.7.2",
    "stylelint-config-prettier": "^8.0.2",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.1.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^0.11.1",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@snowpack/plugin-build-script": "^2.0.11",
    "@snowpack/plugin-optimize": "^0.2.6",
    "@snowpack/plugin-run-script": "^2.1.7",
    "@tailwindcss/typography": "^0.2.0",
    "@tailwindcss/ui": "^0.6.2",
    "alpinejs": "^2.7.2",
    "autoprefixer": "^10.0.1",
    "liquidjs": "^9.15.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.1.4",
    "postcss-100vh-fix": "^1.0.2",
    "postcss-cli": "^8.0.0",
    "rimraf": "^3.0.2",
    "snowpack": "^2.15.1",
    "tailwindcss": "^1.9.6"
  }
}
